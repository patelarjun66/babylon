{% comment %}
  Modified Image Banner Section with centered square image on white background and overlay image
{% endcomment %}

{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<style>
  /* Custom styles for centered square image with white background */
  #Banner-{{ section.id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: {{ section.settings.background_color }};
    padding: 40px 0;
  }

  .square-container {
    width: {{ section.settings.container_width }}px;
    background-color: transparent;
    display: flex;
    padding: 20px;
  }

  .square-image-wrapper {
    width: 100%;
    position: relative;
    padding-bottom: 100%; /* Creates a square aspect ratio */
  }

  .square-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .overlay-image-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60%; /* Adjust this to change overlay image size */
    z-index: 2;
    text-align: center;
  }

  .overlay-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    margin-bottom: 20px; /* Space between overlay image and button */
  }

  .button-container {
    width: 100%;
    text-align: center;
    margin-top: 20px;
  }

  @media screen and (max-width: 749px) {
    .square-container {
      padding: 15px;
    }

    .overlay-image-container {
      width: 80%; /* Larger overlay on mobile */
    }
    .button-container {
      display: none;
    }
  }
</style>

<div
  id="Banner-{{ section.id }}"
  class="banner{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="square-container">
    {% if section.settings.image != blank %}
      <div class="square-image-wrapper">
        {{
          section.settings.image
          | image_url: width: 800
          | image_tag: class: 'square-image', loading: 'lazy', alt: section.settings.image.alt
          | escape
        }}

        {% if section.settings.overlay_image != blank %}
          <div class="overlay-image-container">
            {{
              section.settings.overlay_image
              | image_url: width: 400
              | image_tag: class: 'overlay-image', loading: 'lazy', alt: section.settings.overlay_image.alt
              | escape
            }}

            <div class="button-container">
              {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                  {% if block.type == 'buttons' and block.settings.button_label_1 != blank %}
                    <a
                      {% if block.settings.button_link_1 == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link_1 }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{- block.settings.button_label_1 | escape -}}
                    </a>
                  {% endif %}
                {% endfor %}
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="square-image-wrapper">
        {{ 'image' | placeholder_svg_tag: 'square-image placeholder-svg' }}
        <div class="button-container">
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              {% if block.type == 'buttons' and block.settings.button_label_1 != blank %}
                <a
                  {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_1 }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.button_label_1 | escape -}}
                </a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Centered Square Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "overlay_image",
      "label": "Overlay Image"
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Container Width",
      "default": 500
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    }
  ],
  "blocks": [
    {
      "type": "buttons",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Click here",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_1",
          "default": false,
          "label": "Use secondary button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Centered Square Image",
      "blocks": [
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
