<style>
  @font-face {
    font-family: 'Review-Light-Trial';
    src: url('https://cdn.shopify.com/s/files/1/0598/7798/2251/files/Review-Light-Trial-BF63f6d1043a304.otf?v=1743566365')
      format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .header-container {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100vw !important;
    height: 80px !important;
    background: white !important;
    border-bottom: 1px solid #000 !important;
    z-index: 999 !important;
  }
  .menu-toggle {
    position: absolute !important;
    top: 30px !important;
    left: 30px !important;
    font-size: 10px !important;
    font-family: 'Review', sans-serif !important;
    text-decoration: none !important;
    color: #000 !important;
    z-index: 1002 !important;
    cursor: pointer !important;
    font-weight: 500 !important;
  }

  .menu-toggle:hover {
    text-decoration: underline !important;
  }
  .horizontal-nav {
    position: absolute !important;
    top: 30px !important;
    left: 100px !important;
    display: flex !important;
    justify-content: space-between !important;
    width: 300px !important;
  }

  .horizontal-nav a {
    font-family: 'Review', sans-serif !important;
    text-transform: uppercase !important;
    font-size: 10px !important;
    text-decoration: none !important;
    color: #000 !important;
    transition: opacity 0.2s ease !important;
    font-weight: 500 !important;
  }

  .horizontal-nav a:hover {
    text-decoration: underline !important;
  }

  .fullscreen-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #000;
    transform: translateY(-100%);
    transition: transform 0.8s ease-in-out;
    z-index: 1000;
  }

  .nav-menu {
    position: absolute !important;
    bottom: 40px !important;
    left: 40px !important;
    display: flex !important;
    flex-direction: column !important;
    gap: 0px !important;
    line-height: 1.1 !important;
  }

  .nav-menu a {
    color: #fff;
    text-decoration: none;
    font-size: 32px !important;
    font-family: 'Review' !important;
    font-weight: 900 !important;
    text-transform: uppercase !important;
    padding: 2px 0 !important;
  }

  .nav-menu a:before {
    content: '/' !important;
    margin-right: 5px !important;
  }

  .fullscreen-nav.active {
    transform: translateY(0);
  }

  .menu-toggle.active {
    color: #fff !important;
    z-index: 1002 !important;
  }

  .header-logo {
    position: absolute !important;
    left: 50% !important;
    top: 50% !important;
    transform: translate(-50%, -50%) !important;
    z-index: 1001 !important;
    height: 50px !important;
  }

  .header-logo img {
    height: 100% !important;
    width: auto !important;
    object-fit: contain !important;
  }

  .header-icons {
    position: absolute !important;
    top: 30px !important;
    right: 30px !important;
    display: flex !important;
    gap: 20px !important;
    z-index: 1001 !important;
  }

  .header-icons a {
    text-decoration: none !important;
    color: #000 !important;
    font-size: 10px !important;
    font-family: 'Review-Light-Trial', sans-serif !important;
  }

  .header-icons svg {
    width: 20px !important;
    height: 20px !important;
  }

  @media screen and (max-width: 768px) {
    .horizontal-nav {
      display: none !important;
    }

    .menu-toggle {
      left: 20px !important;
    }

    .header-logo {
      height: 40px !important;
    }

    .header-icons {
      right: 20px !important;
    }
  }

  @media screen and (max-width: 375px) {
    .horizontal-nav {
      left: 70px !important;
      gap: 10px !important;
    }

    .horizontal-nav a {
      font-size: 8px !important;
    }
  }
</style>

<div class="header-container">
  <a href="#" class="menu-toggle" onclick="return false;">MENU</a>

  <div class="header-logo">
    <img src="https://cdn.shopify.com/s/files/1/0598/7798/2251/files/peace.png?v=1743632741" alt="{{ shop.name }}">
  </div>

  <nav class="horizontal-nav">
    <a href="/collections/all">SHOP ALL</a>
    <a href="/store">STORE</a>
    <a href="/pages/stocklist">STOCKLIST</a>
    <a href="/pages/connect">CONNECT</a>
  </nav>

  <div class="fullscreen-nav">
    <nav class="nav-menu">
      <a href="/collections/t-shirts">T-SHIRTS</a>
      <a href="/collections/bottoms">BOTTOMS</a>
      <a href="/collections/fleece">FLEECE</a>
      <a href="/collections/hats">HATS</a>
      <a href="/collections/accessories">ACCESSORIES</a>
      <a href="/collections/sale">SALE</a>
      <a href="/pages/stockist">STOCKIST</a>
    </nav>
  </div>

  <div class="header-icons">
    <a href="{{ routes.account_url }}" class="header-icon">
      <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M16 16C19.3137 16 22 13.3137 22 10C22 6.68629 19.3137 4 16 4C12.6863 4 10 6.68629 10 10C10 13.3137 12.6863 16 16 16Z" stroke="currentColor" stroke-width="2" stroke-miterlimit="10"/>
        <path d="M26 28C26 24.13 21.52 21 16 21C10.48 21 6 24.13 6 28" stroke="currentColor" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round"/>
      </svg>
    </a>
    <a href="{{ routes.cart_url }}" class="header-icon">
      <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11 27C11.5523 27 12 26.5523 12 26C12 25.4477 11.5523 25 11 25C10.4477 25 10 25.4477 10 26C10 26.5523 10.4477 27 11 27Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M25 27C25.5523 27 26 26.5523 26 26C26 25.4477 25.5523 25 25 25C24.4477 25 24 25.4477 24 26C24 26.5523 24.4477 27 25 27Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M3 5H7L10 22H26" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M10 17H25.59C25.7056 17.0001 25.8177 16.9601 25.9072 16.8868C25.9966 16.8135 26.0579 16.7115 26.0806 16.5981L27.8806 7.59813C27.8951 7.52555 27.8934 7.45066 27.8754 7.37886C27.8575 7.30705 27.8239 7.24012 27.7769 7.18265C27.73 7.12518 27.6709 7.07842 27.604 7.04551C27.5371 7.01261 27.464 6.99427 27.39 6.99133H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('.fullscreen-nav');
    let isOpen = false;

    function toggleNav() {
      isOpen = !isOpen;
      menuToggle.classList.toggle('active');
      nav.classList.toggle('active');
    }

    menuToggle.addEventListener('click', toggleNav);
  });
</script>

