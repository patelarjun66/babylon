<style>
  @font-face {
    font-family: 'Review-Light-Trial';
    src: url('https://cdn.shopify.com/s/files/1/0598/7798/2251/files/Review-Light-Trial-BF63f6d1043a304.otf?v=1743566365') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .header-container {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 80px !important;
    background: white !important;
    border-bottom: 1px solid #000 !important;
    z-index: 999 !important;
  }

  .menu-toggle {
    position: absolute !important;
    top: 30px !important;
    left: 30px !important;
    font-size: 10px !important;
    font-family: 'Review-Light-Trial', sans-serif !important;
    text-decoration: none !important;
    color: #000 !important;
    z-index: 1002 !important;
    cursor: pointer !important;
  }

  .horizontal-nav {
    position: absolute !important;
    top: 30px !important;
    left: 100px !important;
    display: flex !important;
    justify-content: space-between !important;
    width: 300px !important;
  }

  .horizontal-nav a {
    font-family: 'Review-Light-Trial', sans-serif !important;
    text-transform: uppercase !important;
    font-size: 10px !important;
    text-decoration: none !important;
    color: #000 !important;
    transition: opacity 0.2s ease !important;
  }

  .fullscreen-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #000;
    transform: translateY(-100%);
    transition: transform 0.8s ease-in-out;
    z-index: 1000;
  }

  .nav-menu {
    position: absolute !important;
    bottom: 40px !important;
    left: 40px !important;
    display: flex !important;
    flex-direction: column !important;
    gap: 0px !important;
    line-height: 1.1 !important;
  }

  .nav-menu a {
    color: #fff;
    text-decoration: none;
    font-size: 32px !important;
    font-family: 'Review'!important;
    font-weight: 900 !important;
    text-transform: uppercase !important;
    padding: 2px 0 !important;
  }

  .nav-menu a:before {
    content: '/' !important;
    margin-right: 5px !important;
  }

  .fullscreen-nav.active {
    transform: translateY(0);
  }

  .menu-toggle.active {
    color: #fff !important;
    z-index: 1002 !important;
  }
</style>

<div class="header-container">
  <a href="#" class="menu-toggle" onclick="return false;">MENU</a>

  <nav class="horizontal-nav">
    <a href="/collections/all">SHOP ALL</a>
    <a href="/store">STORE</a>
    <a href="/pages/stocklist">STOCKLIST</a>
    <a href="/pages/connect">CONNECT</a>
  </nav>

  <div class="fullscreen-nav">
    <nav class="nav-menu">
      <a href="/collections/t-shirts">T-SHIRTS</a>
      <a href="/collections/tops">TOPS</a>
      <a href="/collections/bottoms">BOTTOMS</a>
      <a href="/collections/fleece">FLEECE</a>
      <a href="/collections/hats">HATS</a>
      <a href="/collections/accessories">ACCESSORIES</a>
      <a href="/collections/boards">BOARDS</a>
      <a href="/collections/sale">SALE</a>
      <a href="/pages/look-book">LOOK BOOK</a>
      <a href="/pages/archive">ARCHIVE</a>
      <a href="/pages/stockist">STOCKIST</a>
    </nav>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const menuToggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('.fullscreen-nav');
    let isOpen = false;

    function toggleNav() {
      isOpen = !isOpen;
      menuToggle.classList.toggle('active');
      nav.classList.toggle('active');
    }

    menuToggle.addEventListener('click', toggleNav);
  });
</script>

